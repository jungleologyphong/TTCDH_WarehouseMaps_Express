<body ng-app="myapp" ng-controller="myctrl"> 
  <!-- ? Preloader Start -->
  <div class="main" >
    <div>
      <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
          <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
              <img src="/assetsLogin/img/logo/logodh_mautrang_cokhung-1.png" alt="" />
            </div>
          </div>
        </div>
      </div>
      <!-- Preloader Start-->
      <main class="login-body" data-vide-bg="/assetsLogin/img/login-bg.mp4">
        <!-- Login Admin -->
        <a href="/dashboard">
          <form class="form-default" method="POST">
            <div class="login-form ">
              <!-- logo-login -->
              <div class="logo-login">
                <a href="/dashboard"><img src="/assetsLogin/img/logo/logodh_mautrang_cokhung-1.png" alt="" /></a>
              </div>
              <h2>ĐĂNG NHẬP</h2>
              <div class="form-input">
                <label for="email">Email</label>
                <input id="email" ng-model="user.email" type="email" name="email"
                  placeholder="example@ttcdanghuynh.vn" />
              </div>
              <div class="form-input">
                <label for="name">Password</label>
                <input id="password" ng-model="user.password" type="password" name="password"
                  placeholder="Vui lòng nhập mật khẩu ..." />
              </div>
              <div>
                <button type="button" class="btn btn-info mt-5 text-center" ng-click="login()">ĐĂNG NHẬP</button>
              </div>
            </div>
            <div id="exampleModal" style="display: none;" class="login-form" function>
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <form>
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                          ng-click="closeModal()">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <h5 id="modalValidation">Test closeModal</h5>
                    </form>
                  </div>
                </div>
              </div>
          </form>
        </a>
      </main>
    </div>
  </div>
