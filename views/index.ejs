  <script>
    var app = angular.module("myapp", []);
    app.controller("myctrl", function ($scope) {
      $scope.user = {
        email: "",
        password: "",
      };
      //Function Login
      $scope.login = function () {
        var socket = io.connect('http://localhost:8080');
        console.log("Connect Socket.io Successfully");
        console.log("Email: " + $scope.user.email + " / " + "Password: " + $scope.user.password);
        var email = $scope.user.email;
        var password = $scope.user.password;
        if (email == "" || password == "") {
          document.getElementById("exampleModal").style.display = "block";
          if (email == "") {
            document.getElementById("modalValidation").innerHTML = "Vui lòng nhập Email";
          } else if (password == "") {
            document.getElementById("modalValidation").innerHTML = "Vui lòng nhập Mật khẩu";
          }
        } else {
          socket.on("connection", function (data) {
            socket.emit("login", {email: email}, {password:password});

            socket.on("login", function (data) {
              if (data == true) {
                window.location = 'http://localhost:8080/dashboard';
                alert("Login Succesfully");
              } else {
                alert("Login Failed");
              }
            });
          });
        }
      };
      $scope.closeModal = () => {
        document.getElementById("exampleModal").style.display = "none";
      }
    });
  </script>
